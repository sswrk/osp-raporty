<ReportChoiceScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        size_hint: 1, 0.8
        pos_hint: {'center_x': .5, 'center_y': .5}
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: 'Raport z akcji'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'report'
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: 'Raport miesiÄ™czny'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'monthly'
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: 'Raport roczny'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'yearly'
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: 'Anuluj'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'