<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw
    surname: surname

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Utworz konto"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 16**4


            Label:
                size_hint: 0.4,0.07
                pos_hint: {"x":0, "top":0.8}
                text: "Imie: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.10
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.4,0.10
                pos_hint: {"x":0, "top":0.8-0.11}
                text: "Nazwisko: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.11}
                size_hint: 0.4, 0.10
                id: surname
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.4,0.10
                pos_hint: {"x":0, "top":0.8-0.11*2}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.11*2}
                size_hint: 0.4, 0.10
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 16**4

            Label:
                size_hint: 0.4,0.10
                pos_hint: {"x":0, "top":0.8-0.11*3}
                text: "Haslo: "
                font_size: (root.width**2 + root.height**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.11*3}
                size_hint: 0.4, 0.10
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 16**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 16**4
            text: "Masz juz konto? Zaloguj sie!"
            on_press:
                root.manager.transition.direction = "left"
                root.login()
                root.manager.current = 'login'

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Utworz konto"
            font_size: (root.width**2 + root.height**2) / 16**4
            on_press:
                root.manager.transition.direction = "right"
                if root.submit() == True: root.manager.current = 'login'
                else: root.invalidForm()


<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 16**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 16**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Haslo: "
            font_size: (root.width**2 + root.height**2) / 16**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 16**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 16**4
            text: "Zaloguj sie"
            on_press:
                root.manager.transition.direction = "left"
                if root.login() == True: root.manager.current = 'menu'
                else: root.invalidLogin()

        Button:
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 16**4
            text: "Nie masz jeszcze konta? Utworz je!"
            on_press:
                root.manager.transition.direction = "right"
                root.createBtn()
                root.manager.current = 'create'


<MainWindow>:
    n: n
    email: email
    created:created
    FloatLayout:
        Label:
            id: n
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Nazwa konta: "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Email: "

        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2
            text: "Utworzono w dniu: "

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Wyloguj sie"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"