<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        size_hint: 1, 0.8
        pos_hint: {'center_x': .5, 'center_y': .5}
        Image:
            source: 'resources/fireman.png'
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: 'Dodaj raport'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'report'
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: 'Twoje raporty'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'report_list'
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            text: 'Wyloguj'
            on_press:
                root.parent.ids.firebase_login_screen.sign_out()
                root.manager.transition.direction = 'right'
                root.manager.current = 'firebase_login_screen'
