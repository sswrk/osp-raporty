<ReportListScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint: 1, 0.9
        pos_hint: {'center_x': .5, 'center_y': .5}
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: 0.8, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
            GridLayout:
                size_hint: (1, None)
                height: self.minimum_height
                cols: 1
                id: reports_list_grid
                size_hint_y: None
                row_default_height: '100dp'
                row_force_default: True
                spacing: 5,5
                #padding: 0, 5
        Button:
            text: "Powr√≥t"
            size_hint: 0.7, .1
            pos_hint: {"top": .1, "right": 0.85}
            markup: True
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'