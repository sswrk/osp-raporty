<ReportScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint: 1, 0.8
        pos_hint: {'center_x': .5, 'center_y': .5}
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: 0.6, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
            GridLayout:
                cols: 1
                spacing: 30
                size_hint: (1, None)
                height: self.minimum_height
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Data wyjazdu'
                    multiline: False
                    text: root.currentdate
                TextInput:
                    size: 200, 100
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Rodzaj zdarzenia'
                    multiline: True
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Godzina wyjazdu'
                    multiline: False
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Na miejscu'
                    multiline: False
                TextInput:
                    size: 200, 100
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Miejsce zdarzenia'
                    multiline: True
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Dowódca sekcji'
                    multiline: False
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Dowódca akcji'
                    multiline: False
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Kierowca'
                    multiline: False
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Sprawca'
                    multiline: False
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Poszkodowany'
                    multiline: False
                TextInput:
                    size: 200, 100
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Sekcja'
                    multiline: True
                TextInput:
                    size: 200, 200
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Szczegóły zdarzenia: jakiego użyto sprzętu, ilość jednostek, rodzaj, czy na miejscu była policja, pogotowie, czy były osoby ranne, itp.'
                    multiline: True
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Godz. zakończ.'
                    multiline: False
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Godz. w remizie'
                    multiline: False
                    text: root.currenttime
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'Stan licznika'
                    multiline: False
                TextInput:
                    size: 200, 30
                    focus: True
                    size_hint: 1, None
                    hint_text: 'km do miejsca zdarzenia'
                    multiline: False
        BoxLayout:
            orientation: 'horizontal'
            spacing: 50
            size_hint: 0.5, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
            Button:
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Gotowe'
            Button:
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Anuluj'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'menu'