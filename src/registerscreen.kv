<RegisterScreen>:
    FloatLayout:
        Button:
            size_hint: .4, .05
            pos_hint: {"center_x": .5, "top": .225}
            text: "Powrót"
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                root.parent.current = root.parent.current = "start_screen"
                root.parent.transition = SlideTransition(direction="left")
        TextInput:
            id: email
            multiline: False
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "top": .7}
            hint_text: "E-mail"
        TextInput:
            id: password
            multiline: False
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "top": .575}
            hint_text: "Hasło"
            password: True
        Button:
            text: "Zarejestruj się"
            size_hint: .4 ,.05
            pos_hint: {"center_x": .5, "top": .45}
            on_release:
                root.parent.parent.sign_up(email.text, password.text)
                sign_in_button.opacity = 0
                sign_in_button.disabled = True


