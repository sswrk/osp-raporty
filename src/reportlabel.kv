<ConfirmPopup>:
    cols:1
	Label:
		text: root.text
	GridLayout:
		cols: 2
		size_hint_y: None
		height: '44sp'
		Button:
			text: 'Tak'
			on_release: root.dispatch('on_answer','yes')
		Button:
			text: 'Nie'
			on_release: root.dispatch('on_answer', 'no')
<ReportLabel>
    GridLayout:
        rows: 1
        cols: 2
        Button:
            text: root.name
            on_release:
                root.parent.parent.parent.parent.manager.current = "report"
                root.parent.parent.parent.parent.parent.ids.report.set_args(root.report)
        Button:
            text: 'Usu≈Ñ'
            size_hint_x: None
            width: 100
            on_release:
                root.show_delete_popup()