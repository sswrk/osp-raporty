<StartScreen>:
    FloatLayout:
        Button:
            id: log_in_button
            size_hint: .9, .05
            pos_hint: {"top": .3, "center_x": .5}
            text: "Zaloguj się"
            on_release:
                root.parent.current = "login_screen"
        Button:
            id: create_account_button
            size_hint: .9, .05
            pos_hint: {"top": .225, "center_x": .5}
            text: "Zarejestruj się"
            on_release:
                root.parent.current = "register_screen"


